<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mission_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название миссии"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_mission_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+50"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/reward" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_mission_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Описание миссии"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/progress_mission"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progress="50"
            android:progressTint="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_mission_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0/5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mission_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Выполнено"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>